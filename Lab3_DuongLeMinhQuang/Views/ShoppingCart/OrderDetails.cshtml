@model List<OrderDetail>

<h2>Đơn hàng của bạn</h2>

@if (Model.Count > 0)
{
    <table>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total Amount</th>
            <!-- Add more columns as needed -->
        </tr>
        @foreach (var @item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <!-- Add more columns as needed -->
            </tr>
        }
    </table>
}
else
{
    <p>No orders found.</p>
}
